{{#each article}}
{{#if this.saved}}
<div class="well">
    <h2>{{this.title}} {{this.note.body}}</h2>
    {{!--<form method="get" action="/articles/{{this._id}}">--}}
        <button class="btn btn-success" data-toggle="modal" data-target="#myModal">Add Note</button>
    {{!--</form>--}}
    <form action="/saved/{{this._id}}?_method=PUT" method="POST">
            <input type="hidden" name="saved" value="false">
            <button type="submit" class="btn btn-danger">Removed From Saved</button>
        </form>
</div>
{{!--{{/each}}--}}

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Leave Note for {{this.title}}</h4>
            </div>
            <div class="modal-body">
                <div class="well">
                    <p>{{this.note.body}}</p>
                     <form class="navbar-form navbar-left" method="POST" action="/articles/{{this._id}}?_method=DELETE">
                        <button class="btn btn-danger">X</button>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <form class="navbar-form navbar-left" method="post" action="/articles/{{this._id}}">
                    <div class="form-group">
                        <input type="text" id="ca" name="body">
                        <button type="submit" class="btn btn-primary">Add Note</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{/each}}